{
  "type": "object",
  "properties": {
    "islogin": {
      "type": "identifier",
      "selector": "body",
      "control": "exists"
    },
    "password": {
      "type": "string",
      "control": "text",
      "selector": "[name=\"password\"]"
    },
    "username": {
      "type": "string",
      "selector": "[name=\"username\"]",
      "control": "text"
    },
    "submit": {
      "type": "action",
      "selector": "input.button",
      "control": "action.button"
    }
  },
  "connect": [
    {
      "match": [
        "islogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
